{
  "openapi": "3.1.0",
  "info": {
    "title": "Sofware Requirements Game API",
    "description": "API para el juego de clasificación de requerimientos de software.",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "Auth",
      "description": "Authentication endpoints"
    },
    {
      "name": "Rooms",
      "description": "Room management endpoints"
    },
    {
      "name": "Admin",
      "description": "Admin endpoints"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "AuthResponse": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean" },
          "token": { "type": "string" },
          "user": {
            "type": "object",
            "properties": {
              "id": { "type": "integer" },
              "email": { "type": "string" },
              "first_name": { "type": "string" },
              "last_name": { "type": "string" },
              "role": { "type": "string" }
            }
          }
        }
      },
      "Room": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Identificador único de la sala"
          },
          "room_name": {
            "type": "string",
            "description": "Nombre de la sala"
          },
          "room_code": {
            "type": "string",
            "description": "Código único de la sala"
          },
          "user_id": {
            "type": "integer",
            "description": "ID del usuario creador de la sala"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Fecha y hora de creación de la sala"
          },
          "max_attempts": {
            "type": "integer",
            "description": "Número máximo de intentos permitidos"
          }
        },
        "required": ["id", "room_name", "room_code", "user_id", "created_at", "max_attempts"]
      },
      "Requirement": {
        "type": "object",
        "properties": {
          "no": { "type": "integer" },
          "text": { "type": "string" },
          "isValid": { "type": "boolean" },
          "feedback": { "type": "string" }
        }
      },
      "CourseStats": {
        "type": "object",
        "properties": {
          "score_average": { "type": "number" },
          "time_average": { "type": "number" },
          "dropout_rate": { "type": "number" },
          "grades_distribution": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/GradesDistribution" }
          },
          "total_attempts": { "type": "integer" }
        }
      },
      "GradesDistribution": {
        "type": "object",
        "properties": {
          "score_range": { "type": "string" },
          "count": { "type": "integer" }
        }
      }
    }
  },
  "security": [{ "bearerAuth": [] }],
  "paths": {
    "/admin/course-content": {
      "post": {
        "tags": ["Admin"],
        "summary": "Obtener el banco de requerimientos de un curso",
        "description": "Obtiene el banco de requerimientos generados en la creación del curso a partir de su ID.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "course_id": { "type": "integer" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Banco de requerimientos obtenido exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Requirement" }
                }
              }
            }
          }
        }
      }
    },
    "/admin/course-stats": {
      "post": {
        "tags": ["Admin"],
        "summary": "Obtener las estadisticas de un curso",
        "description": "Obtiene las estadisticas de un curso a partir de su ID.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "course_id": { "type": "integer" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Estadisticas del curso obtenidas exitosamente",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CourseStats" } } }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "security": [],
        "tags": ["Auth"],
        "summary": "Login de usuario",
        "description": "Autentica a un usuario y devuelve un token.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login exitoso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "security": [],
        "tags": ["Auth"],
        "summary": "Registro de usuario",
        "description": "Registra un nuevo usuario en el sistema.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "first_name": { "type": "string" },
                  "last_name": { "type": "string" }
                },
                "required": ["email", "password", "first_name", "last_name"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Registro exitoso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/auth/refresh-token": {
      "get": {
        "tags": ["Auth"],
        "summary": "Refrescar token de usuario",
        "description": "Refresca el token de usuario actual.",
        "responses": {
          "200": {
            "description": "Token refrescado exitosamente",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthResponse" }
              }
            }
          }
        }
      }
    },
    "/assistant/generate-requirements": {
      "get": {
        "tags": ["Assistant"],
        "summary": "Generar requerimientos",
        "description": "Genera requerimientos para una sessión de juego.",
        "responses": {
          "200": {
            "description": "Requerimientos generados exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "requirements": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "no": {
                            "type": "integer",
                            "description": "Número identificador del requerimiento"
                          },
                          "text": {
                            "type": "string",
                            "description": "Texto del requerimiento"
                          },
                          "isValid": {
                            "type": "boolean",
                            "description": "Indica si el requerimiento está bien formulado"
                          },
                          "feedback": {
                            "type": "string",
                            "description": "Retroalimentación sobre la validez del requerimiento"
                          }
                        },
                        "required": ["no", "text", "isValid", "feedback"]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/rooms": {
      "get": {
        "tags": ["Rooms"],
        "summary": "Obtener todas las salas creadas por el usuario autenticado",
        "responses": {
          "200": {
            "description": "Lista de salas creadas por el usuario autenticado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Room"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Rooms"],
        "summary": "Crear una sala",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "room_code": { "type": "string" },
                  "room_name": { "type": "string" },
                  "max_attempts": { "type": "integer" }
                },
                "required": ["room_code", "room_name", "max_attempts"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sala creada exitosamente",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Room" }
              }
            }
          }
        }
      }
    },
    "/rooms/enrolled": {
      "get": {
        "tags": ["Rooms"],
        "summary": "Obtener todas las salas inscritas por el usuario autenticado",
        "responses": {
          "200": {
            "description": "Lista de salas inscritas por el usuario autenticado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Room"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/rooms/enroll": {
      "post": {
        "tags": ["Rooms"],
        "summary": "Inscribirse en una sala",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "room_code": { "type": "string" }
                },
                "required": ["room_code"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Inscripción exitosa",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Room"
                }
              }
            }
          }
        }
      }
    },
    "/rooms/remove": {
      "post": {
        "tags": ["Rooms"],
        "summary": "Eliminar una sala",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "room_id": { "type": "integer" } },
                "required": ["room_id"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sala eliminada exitosamente.",
            "content": { "application/json": { "schema": { "type": "object", "properties": { "message": { "type": "string" } } } } }
          }
        }
      }
    },
    "/attempts/check": {
      "post": {
        "tags": ["Attempts"],
        "summary": "Revisar la cantidad de intentos restantes",
        "description": "Revisa la cantidad de intentos restantes para una sala a partir de su código",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "room_code": { "type": "string" }
                },
                "required": ["room_code"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Respuesta con el número de intentos restantes y el máximo permitido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "remaining": { "type": "integer" },
                    "max_attempts": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/attempts": {
      "post": {
        "tags": ["Attempts"],
        "summary": "Registrar un intento de juego al iniciar una partida",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "room_code": { "type": "string" },
                  "totalreq": { "type": "integer" }
                },
                "required": ["room_code", "totalreq"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Intento registrado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer", "description": "Identificador único del intento" }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error al registrar el intento",
            "content": {
              "application/json": {
                "schema": { "type": "object", "properties": { "message": { "type": "string" } } }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Attempts"],
        "summary": "Actualizar el estado y las estadisticas de una partida.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "attemptId": { "type": "integer" },
                  "status": { "type": "string" },
                  "score": { "type": "number" },
                  "movements": { "type": "integer" },
                  "time": { "type": "string" }
                },
                "required": ["attemptId", "status", "score", "movements", "time"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Estadisticas y estado actualizados exitosamente",
            "content": {
              "application/json": {
                "schema": { "type": "object", "properties": { "message": { "type": "string" } } }
              }
            }
          },
          "500": {
            "description": "Error al actualizar las estadisticas y el estado del intento",
            "content": {
              "application/json": { "schema": { "type": "object", "properties": { "message": { "type": "string" } } } }
            }
          }
        }
      }
    },
    "/game/content": {
      "post": {
        "tags": ["Game"],
        "summary": "Preparar el contenido del juego",
        "description": "Prepara el contenido del juego para una sala a partir de su código",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "roomCode": { "type": "string" } },
                "required": ["roomCode"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Contenido del juego preparado exitosamente.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Requirement"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/student/history": {
      "get": {
        "tags": ["Student"],
        "summary": "Obtener el historial de juegos de un estudiante",
        "description": "Obtiene el historial de juegos de un estudiante a partir de su email.",
        "responses": {
          "200": {
            "description": "Historial de juegos obtenido exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "user_id": {
                        "type": "integer"
                      },
                      "room_id": {
                        "type": "integer"
                      },
                      "totalreq": {
                        "type": "integer"
                      },
                      "movements": {
                        "type": "integer"
                      },
                      "score": {
                        "type": "number"
                      },
                      "status": {
                        "type": "string"
                      },
                      "time": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "room_name": {
                        "type": "string"
                      },
                      "room_code": {
                        "type": "string"
                      },
                      "max_attempts": {
                        "type": "integer"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/seed": {
      "get": {
        "tags": ["Database"],
        "summary": "Ejecutar seed inicial de desarrollo",
        "security": [{"basicAuth": []}],
        "responses": {
          "200": {
            "description": "Seed ejecutado con éxito",
            "content": {
              "application/json": {
                "schema": { "type": "object", "properties": { "message": { "type": "string" } } }
              }
            }
          }
        }
      }
    }
  }
}
